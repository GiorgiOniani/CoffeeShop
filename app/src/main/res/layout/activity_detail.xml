<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/btnBack"
                android:src="@drawable/ic_back"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <TextView
                android:text="Detail"
                android:textSize="18sp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:src="@drawable/ic_favorite_border"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/imageCoffee"
            android:src="@drawable/detail_hero"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@drawable/card_soft"
            android:clipToOutline="true"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:text="Caffe Mocha"
            android:textSize="20sp"
            android:textColor="#111111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="376dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Ice/Hot"
                android:textColor="#888888"
                android:textSize="13sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="200dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/chip_soft"
                    android:padding="6dp"
                    android:src="@drawable/bike" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/chip_soft"
                    android:padding="6dp"
                    android:src="@drawable/middle" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/chip_soft"
                    android:padding="6dp"
                    android:src="@drawable/packaging" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:src="@drawable/ic_star"
                android:layout_width="18dp"
                android:layout_height="18dp"/>

            <TextView
                android:text="4.8"
                android:textSize="14sp"
                android:textColor="#111111"
                android:layout_marginStart="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="(230)"
                android:textSize="13sp"
                android:textColor="#888888"
                android:layout_marginStart="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"/>

        <TextView
            android:text="Description"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#111111"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="A cappuccino is an approximately 150 ml beverage, with 25 ml of espresso coffee and 85 ml of fresh milk foam."
            android:textSize="13sp"
            android:textColor="#888888"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Size"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#111111"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="S"
                android:background="@drawable/chip_soft"
                android:gravity="center"
                android:layout_width="64dp"
                android:layout_height="40dp"/>

            <TextView
                android:text="M"
                android:textColor="@color/coffee_brown"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_width="64dp"
                android:layout_height="40dp"/>

            <TextView
                android:text="L"
                android:background="@drawable/chip_soft"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_width="64dp"
                android:layout_height="40dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="$ 4.53"
                android:textColor="@color/coffee_brown"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/btnBuyNow"
                android:text="Buy Now"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/btn_coffee_primary"
                android:layout_width="180dp"
                android:layout_height="50dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
