<resources>


    <style name="Button.Primary.Large" parent="Widget.Material3.Button">
        <item name="android:layout_height">56dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="backgroundTint">@color/brand</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="Chip.Segmented" parent="Widget.Material3.Button.TonalButton">
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>


    <style name="Chip.Outlined.Small" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">16dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>


    <style name="IconButton.Stepper" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/bg_stepper</item>
        <item name="android:padding">6dp</item>
        <item name="tint">@color/textPrimary</item>
    </style>

</resources>
